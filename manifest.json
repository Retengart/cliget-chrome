{
  "manifest_version": 3,
  "name": "cliget-chrome",
  "version": "1.0.0",
  "description": "Download files from the command line using aria2.",
  
  "icons": {
    "48": "icons/cliget.png",
    "128": "icons/cliget.png"
  },

  "permissions": [
    "webRequest",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_title": "cliget-chrome",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/cliget.png",
      "48": "icons/cliget.png",
      "128": "icons/cliget.png"
    }
  }
} 